<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:indeterminate="true"
        android:visibility="gone"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/session_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="24dp"
            >

            <TextView
                android:id="@+id/sessionTimeRoomText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/text_size_small"
                tools:text="40min / Main Hall"
                />


            <ImageView
                android:id="@+id/session_time_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/session_description_time_image"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/sessionTimeRoomText"
                app:srcCompat="@drawable/ic_access_time_black_24dp"
                />

            <TextView
                android:id="@+id/sessionStartTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:text="@string/sessionview_time"
                android:textColor="@color/grayText"
                app:layout_constraintBottom_toBottomOf="@id/session_time_image"
                app:layout_constraintStart_toEndOf="@id/session_time_image"
                app:layout_constraintTop_toTopOf="@id/session_time_image"
                tools:text="@string/sessionview_time"
                />


            <ImageView
                android:id="@+id/divider_top_description"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/session_time_image"
                app:layout_goneMarginTop="32dp"
                />

            <TextView
                android:id="@+id/sessionDescriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/event_description"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="2dp"
                android:textAlignment="viewStart"
                android:textIsSelectable="true"
                android:textColor="@color/grayText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_description"
                tools:text="@string/event_description"
                />

            <ImageView
                android:id="@+id/divider_top_intended_audience"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sessionDescriptionText"
                />

            <TextView
                android:id="@+id/intendedAudienceLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/session_detail_intended_audience"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_intended_audience"
                />

            <TextView
                android:id="@+id/intendedAudienceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin"
                android:text="@string/session_audience"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="2dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.App.Body1"
                android:textIsSelectable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/intendedAudienceLabelText"
                tools:text="@string/session_audience"
                />

            <ImageView
                android:id="@+id/divider_top_tags"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intendedAudienceText"
                />

            <TextView
                android:id="@+id/session_tag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/session_detail_tag"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_tags"
                />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/session_tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:chipSpacing="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/session_tag_title"
                >

                <com.google.android.material.chip.Chip
                    android:id="@+id/typeChip"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center_vertical|start"
                    android:text="@string/session_category"
                    android:textAppearance="@style/TextAppearance.App.Body1"
                    app:chipMinTouchTargetSize="0dp"
                    tools:text="Firebase"
                    />


                <com.google.android.material.chip.Chip
                    android:id="@+id/topicChip"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center_vertical|start"
                    android:text="@string/session_audience"
                    android:textAppearance="@style/TextAppearance.App.Body1"
                    android:textColor="@color/tag_text_green"
                    app:chipBackgroundColor="@color/tag_bg_green"
                    app:chipMinTouchTargetSize="0dp"
                    />

            </com.google.android.material.chip.ChipGroup>

            <ImageView
                android:id="@+id/divider_top_feedback"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/session_tags"
                />


            <TextView
                android:id="@+id/session_feedback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:textColor="@color/colorBlack"
                android:text="@string/session_feed_back_label"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_feedback"
                />

            <TextView
                android:id="@+id/sessionFeedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/appbar_padding_top"
                android:background="?selectableItemBackground"
                android:paddingStart="@dimen/appbar_padding_top"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top"
                android:paddingBottom="@dimen/appbar_padding_top"
                android:text="@string/session_go_to_feedback"
                android:textAppearance="@style/TextAppearance.Roboto.Body1"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@id/session_feedback_title"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/divider_top_speakers"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/session_feedback_title"
                />

            <TextView
                android:id="@+id/session_speaker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/session_detail_speaker"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_speakers"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sessionSpeakersRv"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/session_speaker_title"
                tools:listitem="@layout/item_speaker"
                />

            <ImageView
                android:id="@+id/divider_top_resource"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginTop="24dp"
                android:contentDescription="@null"
                android:layerType="software"
                android:src="@drawable/shape_dashed_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sessionSpeakersRv"
                />

            <TextView
                android:id="@+id/session_resource_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/session_detail_resource"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="@id/sessionTimeRoomText"
                app:layout_constraintTop_toBottomOf="@id/divider_top_resource"
                />

            <TextView
                android:id="@+id/sessionReserveSeatText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="@dimen/appbar_padding_top"
                android:drawableStart="@drawable/ic_ticket"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/fab_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/fab_margin"
                android:paddingBottom="@dimen/appbar_padding_top"
                android:text="@string/session_detail_reserve_seat"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/session_resource_title"
                />

            <!--<TextView-->
            <!--android:id="@+id/session_slide_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="0dp"-->
            <!--android:background="?attr/selectableItemBackground"-->
            <!--android:clickable="true"-->
            <!--android:drawablePadding="@dimen/appbar_padding_top"-->
            <!--android:drawableStart="@drawable/ic_file_copy_outline_gray2_24dp"-->
            <!--android:focusable="true"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingStart="@dimen/fab_margin"-->
            <!--android:paddingTop="@dimen/appbar_padding_top"-->
            <!--android:paddingEnd="@dimen/fab_margin"-->
            <!--android:paddingBottom="@dimen/appbar_padding_top"-->
            <!--android:text="@string/session_detail_resource_slide"-->
            <!--android:visibility="gone"-->
            <!--android:textColor="@color/colorPrimary"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@id/sessionReserveSeatText"-->
            <!--app:layout_goneMarginTop="@dimen/appbar_padding_top"-->
            <!--/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="end"
        app:hideOnScroll="true"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/session_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bookmark_border_black_24dp"
        app:layout_anchor="@id/bottom_app_bar"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>